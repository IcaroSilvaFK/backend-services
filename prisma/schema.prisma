generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companys {
  id       String @id @default(cuid())
  name     String
  cnpj     String
  password String
  email    String

  @@index([cnpj, email])
  @@map("companys")
}

model Services {
  id          String   @id @default(cuid())
  title       String
  description String?
  comments    String?
  value       Int
  time        DateTime @default(now())

  @@map("services")
}

enum TRANSACTION_TYPE {
  WITHDRAW
  DEPOSIT
}

model Transactions {
  id          String           @id @default(cuid())
  title       String
  description String?
  type        TRANSACTION_TYPE
  createdAt   DateTime         @default(now()) @map("create_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")
  amount      Int

  @@map("transactions")
}
